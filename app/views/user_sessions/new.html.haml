- title "Log in"


:javascript
  $('tabs').hide();

- form_for @user_session, :url => user_session_path do |form|
  %table#user.formList
    %tbody
      %tr
        %td
          = form.label :username, "Username or email"
        %td
          = form.text_field :username
      %tr
        %td
          = form.label :password, "Password"
        %td
          = form.password_field :password
      %tr
        %td
          \&nbsp;
        %td
          = form.submit "Submit"
          =link_to "I can't access my account",new_password_reset_path

