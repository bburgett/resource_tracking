#admin

  - if current_user
    %ul
      %li= link_to "My Profile", edit_user_url(current_user.id)
      %li= link_to "Sign out", logout_path
    %span
      - if current_user.organization
        = "#{current_user.email} [#{current_user.organization.name}]"
      - else
        = "#{current_user.email} [No organization specified]"

  - else
    %ul
      %li= link_to "Sign in", login_path
    %span Have an account?