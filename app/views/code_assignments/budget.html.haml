:javascript
  var _activity_id = "#{@activity.id}";

- content_for :sub_nav do
  = render :partial => 'layouts/sub_nav'

.nav2
  %h2= "Activity Classification"
  %ul
    %li{:id => 'tab1', :class => 'selected'}
      = link_to "Budget", "#"
    %li{:id => 'tab2'}
      = link_to "Budget Cost Categorization", "#"
    %li{:id => 'tab3'}
      = link_to "Expenditure", "#"
    %li{:id => 'tab4'}
      = link_to "Expenditure Cost Categorization", "#"

%table#activity_description
  %tr
    %td.title Name:
    %td= @activity.name
  %tr
    %td.title Total Budget for FY 10-11:
    %td= @activity.budget
  %tr
    %td.title Total Expenditures for FY 09-10:
    %td= @activity.spend
  %tr
    %td.title Description:
    %td= @activity.description

#activity_classification
  = render 'tab', { :update_path => activity_update_coding_budget_path(@activity.id), :activity => @activity, :codes => @codes, :tab => 'tab1' }
