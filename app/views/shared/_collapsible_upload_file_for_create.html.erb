<% #todo switch/check jquery for toggling
  file_upload_divid = "file_upload_#{record_type.to_s}"
%>

<%= link_to (
  "Create new #{record_type.human_name.pluralize.downcase} from a file", 
  "##{file_upload_divid}",
  :onClick => "$('#{file_upload_divid}').toggle();")%>

<% content_tag :div, :id => file_upload_divid do %>
  <%= content_tag :script, "$('#{file_upload_divid}').hide()" %>
  <%= render :partial => 'shared/upload_file_for_create' , :locals => {:record_type => record_type} %>
<% end %>
