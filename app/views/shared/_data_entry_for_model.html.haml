- content_for :sub_nav do
  = render :partial => 'layouts/sub_nav'

- if params[:action] == "table" #makes render component not show xtra stuff when its nested
  = grid
- else  # otherwise, we are on the index action (technically, not rendering a nested scaffold)
  - human_plural_name_for_entity ||= record_type.human_name.pluralize.downcase
  = render 'shared/top_data_entry', :record_type => record_type, :human_plural_name_for_entity => human_plural_name_for_entity
  = grid
  = render 'shared/bottom_data_entry', :record_type => record_type